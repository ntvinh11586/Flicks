<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_normal"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/ivCoverBig"
        android:layout_width="0dp"
        android:layout_height="@dimen/cover_height"
        android:src="@drawable/sample"
        tools:src="@drawable/sample"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_huge"
            tools:text="Hello World" />

        <RatingBar
            android:id="@+id/rbVoteAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="10"
            android:stepSize="0"
            android:isIndicator="true"
            android:layout_marginLeft="@dimen/space_small" />

        <TextView
            android:id="@+id/tvPopularity"
            android:textSize="@dimen/size_normal"
            android:layout_marginLeft="@dimen/space_small"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="28.867483" />

        <TextView
            android:id="@+id/tvOverview"
            android:textSize="@dimen/size_normal"
            android:layout_marginLeft="@dimen/space_small"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lorem ipsum dolor sit amet, a ac felis. Mauris in dui non dui ultrices tempus. Pellentesque et fermentum nisi, et venenatis urna. Ut tempus velit non ullamcorper semper. Pellentesque vel egestas enim. Proin sed tristique dui. Etiam eget augue est." />

    </LinearLayout>

</LinearLayout>